@page
@model LoginModel

<div >
    <div id="container" class="align-content-lg-center col-md-4 justify-content-lg-center">
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" type="text" placeholder="Login" 
			onfocus="this.placeholder=''" onblur="this.placeholder='Login'" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" 
			onfocus="this.placeholder=''" onblur="this.placeholder='Password'"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button class="login-button" type="submit">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a class="link" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a class="link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>

    </div>
    <div id="window">
        <img src="~/assets/promyk.jpg" />
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
